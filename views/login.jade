extends layout

block content 
 .container.py-5.login
  .row
    .col-md-12
      h2.text-center.mb-5 Login Form
      if errors
        each error, i in errors
         div.alert.alert-danger #{error.msg}
      if message
        div.alert.alert-danger #{message}
  .row
    .col-md-6.mx-auto.center-div
      // card with form for login
      .card.border-secondary
        .card-header
          h3.mb-0.my-2 Login
        .card-body
          form#formLogin.form(role='form', autocomplete='off', novalidate='', method='POST', action='/login')
            .form-group
              label(for='inputEmail') Email
              input#inputEmail.form-control.form-control-lg.rounded-0(type='text', name='email', required='')
            .form-group
              label(for='inputPassword') Password
              input#inputPassword.form-control.form-control-lg.rounded-0(type='password', name='password', required='', autocomplete='new-password')
            .form-group
              button.btn.btn-primary.btn-lg.float-right.btnLogin(type='submit', name='submit', value='Login') Register
   .row
  .container.text-center  
    ul.list-inline.text-center
      a.text-muted(ref='#') New to UpSkill? 
      a.text-primary(href="/register")  Create a free account
