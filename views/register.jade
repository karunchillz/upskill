extends layout

block content 
 .container-fluid.register.main_content
  .row
    .col-md-12
      h2.text-center.mb-5 Register
      if errors
       each error, i in errors
        div.alert.alert-danger #{error.msg}
      if message
        div.alert.alert-danger #{message}        
  .row
    .col-md-6.mx-auto.center-div
      .card.border-secondary
        .card-header
          h3.mb-0.my-2 Register
        .card-body
          form#formRegister.form(role='form', autocomplete='off', novalidate='', method='POST', action='/register')
            .form-group
              label(for='inputName') Name
              input#inputName.form-control.form-control-lg.rounded-0(type='text', name='name', placeholder='First and Last Name', required='')
            .form-group
              label(for='inputEmail') Email
              input#inputEmail.form-control.form-control-lg.rounded-0(type='email', name='email', placeholder='email@gmail.com', required='')
            .form-group
              label(for='inputPassword') Password
              input#inputPassword.form-control.form-control-lg.rounded-0(type='password', name='password', placeholder='password', title='At least 6 characters with letters and numbers', required='')
            .form-group
              label(for='inputVerify') Verify
              input#inputVerify.form-control.form-control-lg.rounded-0(type='password', name='verify', placeholder='password (again)', required='')
            .form-group
              button.btn.btn-primary.btn-lg.float-right.btnLogin(type='submit', name='submit', value='Register') Register
  .row
   .container.text-center
    ul.list-inline.text-center
     a.text-muted(ref='#') We're glad you're here! 